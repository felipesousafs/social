<p id="notice"><%= notice %></p>

<h1>Strikes</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th>User</th>
      <th>Post</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @strikes.each do |strike| %>
      <tr>
        <td><%= strike.text %></td>
        <td><%= strike.user %></td>
        <td><%= strike.post %></td>
        <td><%= link_to 'Show', strike %></td>
        <td><%= link_to 'Edit', edit_strike_path(strike) %></td>
        <td><%= link_to 'Destroy', strike, method: :delete, data: { confirm: (t 'messages.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Strike', new_strike_path %>
