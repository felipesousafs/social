<p id="notice"><%= notice %></p>

<h1>Friendships</h1>

<table>
  <thead>
    <tr>
      <th>Accepted</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friendships.each do |friendship| %>
      <tr>
        <td><%= friendship.accepted %></td>
        <td><%= friendship.user %></td>
        <td><%= link_to 'Show', friendship %></td>
        <td><%= link_to 'Destroy', friendship, method: :delete, data: { confirm: (t 'messages.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friendship', new_friendship_path %>
