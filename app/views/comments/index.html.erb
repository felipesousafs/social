<h1>Listing comments</h1>

<table>
  <tr>
    <th>Text</th>
    <th>Post</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.text %></td>
    <td><%= comment.post %></td>
    <td><%= comment.user %></td>
    <td><%= link_to 'Show', [comment.post, comment] %></td>
    <td><%= link_to 'Edit', edit_post_comment_path(comment.post, comment) %></td>
    <td><%= link_to 'Destroy', [comment.post, comment], :confirm => (t 'messages.are_you_sure?'), :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Comment', new_post_comment_path(params[:post_id]) %>
