<p id="notice"><%= notice %></p>

<h1>Blocked Users</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blocked_users.each do |blocked_user| %>
      <tr>
        <td><%= blocked_user.user %></td>
        <td><%= link_to 'Show', blocked_user %></td>
        <td><%= link_to 'Unblock', blocked_user, method: :delete, data: { confirm: (t 'messages.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
