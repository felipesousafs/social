<div class="card text-dark mb-3">
  <div class="card-header pb-0">
    <h5 class="card-title">
      Seguidores
    </h5>
  </div>
  <div class="card-body">
    <table class="table">
      <thead>
      <tr>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @followers.each do |follower| %>
        <tr>
          <td><%= link_to follower.user, follower.user %></td>
          <td><%= link_to 'Remover seguidor', follower, method: :delete, data: { confirm: (t 'messages.are_you_sure') } %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

  </div>
</div>


<br>

<%= link_to 'New Follower', new_follower_path %>
