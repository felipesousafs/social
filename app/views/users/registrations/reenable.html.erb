<%= simple_form_for('') do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Reativar", class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
